<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form" action="/admin/edit-product/<%= product.id %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" value="<%= product.title %>" name="title" id="title">
      </div>
      <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" value="<%= product.imageUrl %>" name="imageUrl" id="imageUrl">
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="number" value="<%= product.price %>" name="price" id="price" step="0.01">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5"><%= product.description %></textarea>
      </div>

      <button class="btn" type="submit">Save</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>